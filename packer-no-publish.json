{
    "description": "Builds a Ubuntu 16.04 Server x64 box with Kubernetes installed",
    "min_packer_version": "1.0.0",

    "variables": {
        "ssh_name": "vagrant",
        "ssh_pass": "vagrant",
        "hostname": "xenial-server-kubernetes",
        "version": "5.1.22",
        "comment": "Upgrade to VirtualBox 5.1.22",
        "ovf": "Xenial-x64-Server-K8s.ova",
        "atlas": "{{env `ATLAS_ACCOUNT`}}"
    },

    "builders": [{
        "boot_command" : [],
        "boot_wait": "10s",
        "floppy_files": [],
        "format": "ova",
        "guest_additions_mode": "upload",
        "guest_additions_path" : "VBoxGuestAdditions_{{.Version}}.iso",
        "headless": false,
        "http_directory" : "web-server",
        "http_port_max" : 9000,
        "http_port_min" : 8000,
        "output_directory": "output-virtualbox-iso",
        "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",
        "source_path": "{{ user `ovf` }}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_port": 22,
        "ssh_username": "{{user `ssh_name`}}",
        "ssh_wait_timeout": "20m",
        "type": "virtualbox-ovf",
        "vboxmanage": [
		        ["modifyvm", "{{.Name}}", "--vram", "16"],
		        ["modifyvm", "{{.Name}}", "--memory", "4096"],
		        ["modifyvm", "{{.Name}}", "--cpus", "2"],
		        ["modifyvm", "{{.Name}}", "--audio", "none"],
		        ["modifyvm", "{{.Name}}", "--clipboard", "bidirectional"]
	      ],
	"vboxmanage_post": [],
	"vm_name": "xenial-server-kubernetes"
    }],
    "provisioners": [
        {
            "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
            "type": "shell",
            "scripts": ["scripts/passwordless-sudo.sh",
                        "scripts/install-tools.sh",
                        "scripts/configure-ssh-directory.sh",
                        "scripts/disable-dns-lookups.sh",
                        "scripts/install-virtualbox.sh",
                        "scripts/zero-out-disk.sh"]
        }
    ],
    "post-processors": [
        [{
             "compression_level": 9,
             "include": [],
             "keep_input_artifact": true,
             "output": "vagrant-kubernetes/xenial-server-kubernetes.box",
             "type": "vagrant"
        }]
    ]
}
